#!/usr/bin/env python3

from sys import argv
from my import pylib

if __name__ == "__main__" :
  if "info" in argv :
    idx =argv.index("info")
    if idx<len(argv)-2 : 
      pylib.info(argv[idx+1], argv[idx+2])
    elif idx<len(argv)-1 : 
      pylib.info(argv[idx+1])
    else : 
      pylib.info()
  if "mkpylib" in argv :
    idx =argv.index("mkpylib")
    if idx<len(argv)-1 : 
      pylib.mkpylib(argv[idx+1])
  if "remove" in argv :
    idx =argv.index("remove")
    if idx<len(argv)-1 : 
      pylib.remove(argv[idx+1])

